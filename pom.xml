		  <plugin>
			<groupId>org.codehaus.mojo</groupId>
			<artifactId>exec-maven-plugin</artifactId>
			<version>1.6.0</version>
			<executions>
			  <execution>
				<id>build-dockerfile</id>
				<phase>install</phase>
				<goals>
				  <goal>exec</goal>
				</goals>
				<configuration>
				  <executable>docker</executable>
				  <workingDirectory>${project.basedir}</workingDirectory>
				  <arguments>
					<argument>build</argument>
					<argument>-t</argument>
					<argument>${project.name}:${project.version}</argument>
					<argument>.</argument>
				  </arguments>
				</configuration>
			  </execution>
			  <execution>
				<id>tag-image</id>
				<phase>install</phase>
				<goals>
				  <goal>exec</goal>
				</goals>
				<configuration>
				  <executable>docker</executable>
				  <workingDirectory>${project.build.directory}</workingDirectory>
				  <arguments>
					<argument>tag</argument>
					<argument>${project.name}:${project.version}</argument>
					<argument>${project.name}:latest</argument>
				  </arguments>
				</configuration>
			  </execution>
			  <execution>
				<id>push-image</id>
				<phase>deploy</phase>
				<goals>
				  <goal>exec</goal>
				</goals>
				<configuration>
				  <executable>docker</executable>
				  <workingDirectory>${project.build.directory}</workingDirectory>
				  <arguments>
					<argument>push</argument>
					<argument>${project.name}</argument>
				  </arguments>
				</configuration>
			  </execution>
			</executions>
		  </plugin>
		</plugins>
	  </build>
	</profile>
  </profiles>
</project>
