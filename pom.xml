  <modules>
    <module>samples/CloudIdentityAuthenticators</module>
    <module>ci-keycloak</module>
  </modules>
    
  <profiles>
	<profile>
	  <id>docker-images</id>
	  <activation>
		<file>
		  <exists>Dockerfile</exists>
		</file>
	  </activation>
	  <build>
		<plugins>
		  <!--plugin>
			<artifactId>maven-resources-plugin</artifactId>
			<version>3.0.2</version>
